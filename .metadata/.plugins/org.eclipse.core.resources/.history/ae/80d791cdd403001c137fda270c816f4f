<script type="text/javascript">

var input1 = prompt("첫번째 정수를 입력하세요.");
var input2 = prompt("실행할 사칙연산자를 입력하세요.");
var input3 = prompt("두번째 정수를 입력하세요.");

document.write("input1");

if(input2 == "+" && input2 == "-" && input2 == "*" && input2 == "/" &&){
	document.write(input1 + input2 + input3 = parseInt(input1) + parseInt(input3) "<br>");
	}
else{
	document.write("잘못된 연산입니다");	
}

</script>



