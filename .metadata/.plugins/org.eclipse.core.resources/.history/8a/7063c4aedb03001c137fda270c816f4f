<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>calculator실습</title>
<script type="text/javascript">

var data1 = prompt("첫번째 정수를 입력하세요.");
var op = prompt("+, - , *, /중 실행할 연산자를 입력하세요.");
var data2 = prompt("두번째 정수를 입력하세요.");

data1 = parseInt(data1);
data2 = parseInt(data2);

if(op == "+"){
	document.write(data1 + data2 + "<br>");
}else if(op == "-"){
	document.write(data1 - data2 + "<br>");
}else if(op == "*"){
	document.write(data1 * data2 + "<br>");
}else if(op == "/"){
	document.write(data1 / data2 + "<br>");
}else{
	var userinput = confirm("잘못된 연산자입니다. 계속 하시겠습니까?")
	if(userinput){
		document.write(data1 + data2 + "<br>");
	}else{
		document.write("다시 연산 내용을 입력하세요 <br>");
	}
}


</script>



</head>
<body>

</body>
</html>