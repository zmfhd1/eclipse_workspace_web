<script type="text/javascript">

var data1 = prompt("첫번째 정수를 입력하세요.");
var op = prompt("+, - , *, /중 실행할 연산자를 입력하세요.");
var data2 = prompt("두번째 정수를 입력하세요.");

if(op == "+"){
	document.write(data1 + data2);
}
else if(op == "-"){
	result = parseInt(data1) - parseInt(data2); 
	document.write(result);
}
else if(op == "*"){
	result = parseInt(data1) * parseInt(data2); 
	document.write(result);
}
else if(op == "/"){
	result = parseInt(data1) / parseInt(data2); 
	document.write(result);
}
else{
	var input4 = confirm("잘못된 연산자입니다. 계속 하시겠습니까?")
}

