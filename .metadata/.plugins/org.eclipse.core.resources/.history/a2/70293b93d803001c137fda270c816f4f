<script type="text/javascript">

var input1 = prompt("첫번째 정수를 입력하세요.");
var input2 = prompt("+, - , *, /중 실행할 연산자를 입력하세요.");
var input3 = prompt("두번째 정수를 입력하세요.");

if(input2 == "+"){
	result = parseInt(input1) + parseInt(input3); 
	document.write(input1 "+" input3 "=" result입니다.);
}
else if(input2 == "-"){
	result = parseInt(input1) - parseInt(input3); 
	document.write(result);
}
else if(input2 == "*"){
	result = parseInt(input1) * parseInt(input3); 
	document.write(result);
}
else if(input2 == "/"){
	result = parseInt(input1) / parseInt(input3); 
	document.write(result);
}
else{
	var input4 = confirm("잘못된 연산자입니다. 계속 하시겠습니까?")
}

